@model BookstoreProject.Models.Author

@{
    ViewData["Title"] = "Yazar Sil";
}
<div class="container">

    @if (Model.Active == true)
    {
        <h3>Pasif Etmek İstediğinizden Emin Misiniz?</h3>
        <div>

            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Name)
                </dd>
            </dl>
            <div class="row">
                <div class="col-md-3">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Pasif Et" class="btn btn-block btn-danger" />

                    </form>
                </div>
                <div class="col-md-3">
                    <form asp-action="Index">
                        <div class="form-group">
                            <input type="submit" value="Listeye Geri Dön" class="btn btn-block btn-primary" />
                        </div>
                    </form>
                </div>
            </div>



        </div>
    }
    else
    {
        <h3>Aktif Etmek İstediğinizden Emin Misiniz?</h3>
        <div>

            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Name)
                </dd>
            </dl>
            <div class="row">
                <div class="col-md-3">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Aktif Et" class="btn btn-block btn-danger" />

                    </form>
                </div>
                <div class="col-md-3">
                    <form asp-action="Index">
                        <div class="form-group">
                            <input type="submit" value="Listeye Geri Dön" class="btn btn-block btn-primary" />
                        </div>
                    </form>
                </div>
            </div>



        </div>
    }

</div>