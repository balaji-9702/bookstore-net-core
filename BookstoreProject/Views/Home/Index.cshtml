@{
    ViewData["Title"] = "Anasayfa";
}

@model IEnumerable<Book>

<section class="static about-sec">
    <div class="container">
        <h2>yeni eklenen kitaplar</h2>
        <div class="recent-book-sec">
            <div class="row">
                @if (Model.Any())
                {
                    @foreach (var _kitap in Model)
                    {
                        <div class="col-md-3">
                            <div class="item">
                                <img src="~/images/@_kitap.MainPhoto" class="img" />
                                <h3><a asp-controller="Home" asp-action="BookDetails" asp-route-searchId="@_kitap.Id">@_kitap.Name_TR</a></h3>
                                <h6><span class="price">@_kitap.Price TL</span> / <a asp-controller="Home" asp-action="BookDetails" asp-route-searchId="@_kitap.Id">Satın Al</a></h6>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <p style="margin-left:50px;">Yeni eklenen kitap yok.</p>
                }
            </div>
        </div>
    </div>
</section>

