@model IEnumerable<BookstoreProject.Models.Basket>

@{
    ViewData["Title"] = "Kitap Listesi";
}

<section class="static about-sec">
    <div class="container">
        <h1>Siparişlerim</h1>
        @if(TempData["HataMesaj"] != null)
        {
            <h3>@TempData["HataMesaj"]</h3>
        }
        @if (Model.Any())
        {
            <table id="myOrderTable" class="table table-striped table-bordered" style="width:100%;">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Id)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Durum)
                        </th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Durum)
                            </td>
                            @if (item.Durum == "KARGO")
                            {
                                <td style="display: flex;">
                                    <form class="col-6" style="display:inline-block;" asp-controller="Home" asp-action="OrderDetails">
                                        <div class="btn-sec">
                                            <button name="orderId" value="@item.Id" class="btn btn-block btn-primary">Detay</button>
                                        </div>
                                    </form>
                                    <form class="col-6" style="display:inline-block;" asp-controller="Home" asp-action="CancelOrder">
                                        <div class="btn-sec">
                                            <button name="orderId" value="@item.Id" class="btn btn-block btn-primary">İptal Et</button>
                                        </div>
                                    </form>
                                </td>
                            }
                            else
                            {
                        <td style="display: flex;">
                            <form class="col-12" style="display:inline-block;" asp-controller="Home" asp-action="OrderDetails">
                                <div class="btn-sec">
                                    <button name="orderId" value="@item.Id" class="btn btn-block btn-primary">Detay</button>
                                </div>
                            </form>
                        </td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p style="margin-left:50px;">Daha önce hiç sipariş tamamlamamışsın. Hemen alışveriş yapabilirsin :)</p>
        }
    </div>
</section>

@section scripts {
    <script>
        $(document).ready(function () {
            $('#myOrderTable').DataTable();
        });
    </script>
}