@model IEnumerable<BookstoreProject.Models.Basket>

@{
    ViewData["Title"] = "Kitap Listesi";
}

<section class="static about-sec">
    <div class="container">
        <h1>Siparişlerim</h1>
        @if (TempData["HataMesaj"] != null)
        {
            <h3>@TempData["HataMesaj"]</h3>
        }
        @if (Model.Any())
        {
            <table id="myOrderTable" class="table table-striped table-bordered" style="width:100%;">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Id)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Status)
                        </th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Status)
                            </td>
                            @if (item.Status == "KARGO")
                            {
                                <td style="display: flex;">
                                    <a style="padding: 5px;width: 50%;" asp-controller="Home" asp-action="OrderDetails" asp-route-orderId="@item.Id"><input type="submit" value="Detay" class="btn btn-block btn-primary" /></a>

                                    <a style="padding: 5px;width: 50%;" asp-controller="Home" asp-action="CancelOrder" asp-route-orderId="@item.Id"><input type="submit" value="İptal Et" class="btn btn-block btn-primary" /></a>
                                </td>
                            }
                            else
                            {
                                <td style="display: flex;">
                                    <a style="padding: 5px;width: 50%;" asp-controller="Home" asp-action="OrderDetails" asp-route-orderId="@item.Id"><input type="submit" value="Detay" class="btn btn-block btn-primary" /></a>
                                </td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p style="margin-left:50px;">Daha önce hiç sipariş tamamlamamışsın. Hemen alışveriş yapabilirsin :)</p>
        }
    </div>
</section>

@section scripts {
    <script>
        $(document).ready(function () {
            $('#myOrderTable').DataTable();
        });
    </script>
}