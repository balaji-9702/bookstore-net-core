@model IEnumerable<BookstoreProject.Models.Basket>

@{
    ViewData["Title"] = "Sipariş Listesi";
}

<section class="static about-sec">
    <div class="container">
        <h1>Bekleyen Siparişler</h1>
        <table id="orderTable" class="table table-striped table-bordered" style="width:100%;">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UserDetailsId)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.Status)
                    </th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            <span style="margin-right:10px;">@Html.DisplayFor(modelItem => item.UserDetails.Ad)</span>
                            <span style="margin-right:10px;">@Html.DisplayFor(modelItem => item.UserDetails.Soyad)</span>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Status)
                        </td>
                        <td style="display:flex;">
                            <a style="padding: 5px;width: 50%;" asp-action="ChangeSituation" asp-route-id="@item.Id"><input type="submit" value="Kargola" class="btn btn-block btn-primary" /></a>
                            <a style="padding: 5px;width: 50%;" asp-action="BasketDetails" asp-route-id="@item.Id"><input type="submit" value="Detay" class="btn btn-block btn-primary" /></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>

@section scripts {
    <script>
        $(document).ready(function () {
            $('#orderTable').DataTable();
        });
    </script>
}