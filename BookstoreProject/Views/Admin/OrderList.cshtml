@model IEnumerable<BookstoreProject.Models.Basket>

@{
    ViewData["Title"] = "Order List";
}

<section class="static about-sec">
    <div class="container-fluid">
        <h1>Sipariş Listesi</h1>
        
        <table id="orderTable" class="table table-striped table-bordered" style="width:100%;">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UserId)
                    </th>
                    
                    <th>
                        @Html.DisplayNameFor(model => model.Durum)
                    </th>
                  


                    <th COLSPAN=2>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                 {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Durum)
                    </td>
                    
                     <td><a asp-action="ChangeSituation" asp-route-id="@item.Id"><input type="submit" value="Kargola" class="btn btn-block btn-primary" /></a></td>
                     <td><a asp-action="BasketDetails" asp-route-id="@item.Id"><input type="submit" value="Detay" class="btn btn-block btn-primary" /></a></td>
                    

                </tr>
                 }
            </tbody>
        </table>
    </div>
</section>

@section scripts {
    <script>
        $(document).ready(function () {
            $('#orderTable').DataTable();
        });
    </script>
}