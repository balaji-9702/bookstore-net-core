                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ThirdPhoto)
                </dd>
            </dl>
            <div class="row">
                <div class="col-md-3">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="@localizer["ActivateButton"]" class="btn btn-block btn-danger" />

                    </form>
                </div>
                <div class="col-md-3">
                    <form asp-action="Index">
                        <div class="form-group">
                            <input type="submit" value="@localizer["GoBackToList"]" class="btn btn-block btn-primary" />
                        </div>
                    </form>
                </div>
            </div>

        </div>
    }

</div>