@model BookstoreProject.Models.Book

@{
    ViewData["Title"] = "Kitap Detaylari";
}
<div class="container">
    <h1>Detaylar</h1>

    <div>

        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name_TR)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name_TR)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name_EN)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name_EN)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Description_TR)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description_TR)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Description_EN)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description_EN)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Price)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Price)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Stock)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Stock)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PublishYear)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PublishYear)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CategoryId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Category.Name_TR)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.LanguageId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Language.Name_TR)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.AuthorId)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Author.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CreateDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CreateDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Active)
            </dt>
            @if (Model.Active == true)
            {
                <dt class="col-sm-10">
                    <span class="circle green"></span>
                </dt>
            }
            else
            {
                <dt class="col-sm-10">
                    <span class="circle red"></span>
                </dt>
            }
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.MainPhoto)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.MainPhoto)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.SecondPhoto)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.SecondPhoto)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ThirdPhoto)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ThirdPhoto)
            </dd>
        </dl>
    </div>
    <div class="row">
        <div class="col-md-3">
            <form asp-action="Edit" method="GET" asp-route-id="@Model.Id" >
                <div class="form-group">
                    <input type="submit" value="Düzenle" class="btn btn-block btn-primary" />
                </div>
            </form>
        </div>
        <div class="col-md-3">
            <form asp-action="Index">
                <div class="form-group">
                    <input type="submit" value="Listeye Geri Dön" class="btn btn-block btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>