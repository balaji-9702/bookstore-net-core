@model IEnumerable<BookstoreProject.Models.Book>

@{
    ViewData["Title"] = "Kitap Listesi";
}

<section class="static about-sec">
    <div class="container-fluid">
        <h1>Kitap Listesi</h1>
        <form asp-controller="Books" asp-action="Create" style=" margin-bottom: 10px;" method="get">
            <button type="submit" class="btn btn-primary">Yeni Kitap Ekle</button>
        </form>
        <table id="bookTable" class="table table-striped table-bordered" style="width:100%;">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name_TR)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name_EN)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Price)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Stock)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PublishYear)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Category)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Language)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Author)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CreateDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Active)
                    </th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name_TR)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name_EN)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Stock)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PublishYear)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Category.Name_TR)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Language.Name_TR)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Author.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreateDate)
                        </td>
                        @if (item.Active == true)
                        {
                            <td><span class="circle green"></span></td>
                        }
                        else
                        {
                            <td><span class="circle red"></span></td>
                        }
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-edit"></i></a>
                            <a asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-info-circle"></i></a>
                            <a asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>

@section scripts {
    <script>
        $(document).ready(function () {
            $('#bookTable').DataTable();
        });
    </script>
}