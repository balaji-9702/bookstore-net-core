@model BookstoreProject.Models.Category

@{
    ViewData["Title"] = "Kategori Ekle";
}
<div class="container">
    <h1>Ekle</h1>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
               
                    <div class="form-group">
                        <label asp-for="Name_TR" class="control-label"></label>
                        <input asp-for="Name_TR" class="form-control" />
                        <span asp-validation-for="Name_TR" class="text-danger"></span>
                    </div>
                
                
                    <div class="form-group">
                        <label asp-for="Name_EN" class="control-label"></label>
                        <input asp-for="Name_EN" class="form-control" />
                        <span asp-validation-for="Name_EN" class="text-danger"></span>
                    </div>
                
                    <div class="form-group">
                        <input type="submit" value="Ekle" class="btn btn-block btn-primary" />
                    </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Listeye Geri Don</a>
    </div>
</div>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
